    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layTop2"
        android:id="@+id/layTop4"
        android:background="@drawable/shadow_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp">


        <ImageView
            android:layout_marginLeft = "20dp"
            android:layout_marginRight = "25dp"
            android:layout_marginTop = "20dp"
            android:id="@+id/imagelistHome"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_transblack"></ImageView>


        <TextView
            android:id="@+id/idValList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/txt20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="Total Sales"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>



        <TextView
            android:id="@+id/txt21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txt20"
            android:textSize="11dp"
            android:alpha=".7"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="Include sales and Tax (PPn)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>




        <TextView
            android:id="@+id/txtSummaryTotalSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txt21"
            android:textSize="20dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="3,500,000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:ems="15"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:id="@+id/btnSummarySalesDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"></Button>




    </RelativeLayout>










    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layTop4"
        android:id="@+id/layTop7"
        android:background="@drawable/shadow_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp">


        <ImageView
            android:layout_marginLeft = "20dp"
            android:layout_marginRight = "25dp"
            android:layout_marginTop = "20dp"
            android:id="@+id/imagelistHome2"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_transblack"></ImageView>



        <TextView
            android:id="@+id/txt23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome2"
            android:text="Payment Paid"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>



        <TextView
            android:id="@+id/txt24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txt23"
            android:textSize="11dp"
            android:alpha=".7"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome2"
            android:text="All money paid by customer"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>




        <TextView
            android:id="@+id/txtSummaryTotalpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txt24"
            android:textSize="20dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome2"
            android:text="3,500,000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:ems="15"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:id="@+id/btnSummaryPaymentDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"></Button>



    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layTop7"
        android:id="@+id/layTop5"
        android:background="@drawable/shadow_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp">


        <TextView
            android:id="@+id/txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:fontFamily="@font/nunitobold"

            android:text="Invetory Value Sell"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/txt11"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="20dp"
    android:paddingBottom="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.moobie.Function.ExpandableHeightGridView
            android:id="@+id/gridPilihan6"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="5dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="40dp"
            android:clipToPadding="false"
            android:stretchMode="columnWidth">

        </com.example.moobie.Function.ExpandableHeightGridView>


    </RelativeLayout>
</ScrollView>

