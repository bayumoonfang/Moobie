<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLogin" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">#111111</item>
    </style>

    <style name="AppThemeLogin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeLogin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppThemeRegist" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">#111111</item>
        <item name="android:popupAnimationStyle">@null</item>
    </style>
    <style name="AppThemeRegist.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeRegist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TabLayoutStyle2" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
    </style>

    <style name="MyTextInputLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>

    </style>

    <style name="PopUpsearch" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:itemBackground">@color/colorWhite</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupAnimationStyle">@null</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorFullBlack</item>
        <item name="android:textSize">15dp</item>

    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorFullBlack</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/colorFullBlack</item>
    </style>

    <style name="NoPopupAnimation" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupAnimationStyle">@null</item>
    </style>


    <style name="progressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>


    <style name="ThemeFullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NoUpperText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/varelaround</item>
    </style>


</resources>
