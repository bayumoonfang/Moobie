<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layactivity_pembayaran"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/layOut1"
        android:background="@drawable/border_bottom"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layBack">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrowback_black"
                android:layout_margin="21dp"
                android:id="@+id/imgBack"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/layBack"
            android:text="Pembayaran"
            android:layout_margin="16dp"
            android:textSize="16dp"
            android:fontFamily="@font/nunitobold"
            android:id="@+id/txtProduk"
            android:textColor="@color/colorBlack"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/nunitobold"
            android:id="@+id/btnSimpanPesanan"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layOut1"
        android:background="#eaebef"
        android:visibility="gone"
        android:id="@+id/layOut2"
        android:layout_marginTop="-1dp">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="12dp"
            android:fontFamily="@font/nunitobold"
            android:text="Total Tagihan"
            android:textColor="@color/colorFullBlack" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/varelaround"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:text="Loading..."
            android:textColor="@color/colorOrange2"
            android:layout_marginBottom="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valTotalnya"
            android:visibility="gone"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut7"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/layOut2"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Tagihan"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:id="@+id/txt7"
            android:textColor="@color/colorBlack"></TextView>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrowright"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layOut7"
        android:id="@+id/separator2"
        android:background="#eaebef"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut3"
        android:padding="10dp"
        android:layout_below="@id/separator2"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:id="@+id/txt1"
            android:alpha=".8"
            android:textColor="@color/colorBlack"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/txt1"
            android:id="@+id/txtValCustomer"
            android:alpha=".6"
            android:fontFamily="@font/varelaround"
            android:textColor="@color/colorBlack"></TextView>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrowright"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut4"
        android:padding="10dp"
        android:layout_below="@id/layOut3"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan Transaksi"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:alpha=".8"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:id="@+id/txt2"
            android:textColor="@color/colorBlack"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/varelaround"
            android:layout_marginTop="5dp"
            android:hint="Tulis Catatan..."
            android:textStyle="bold"
            android:textSize="14dp"
            android:background="#00000000"
            android:textColor="@color/colorFullBlack"
            android:id="@+id/txtCatatan"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layOut4"
        android:id="@+id/separator1"
        android:background="#eaebef"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut5"
        android:padding="10dp"
        android:layout_below="@id/separator1"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Bayar"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:id="@+id/txt3"
            android:alpha=".8"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/txt3"
            android:id="@+id/txtValCaraBayar"
            android:alpha=".6"
            android:fontFamily="@font/varelaround"
            android:textColor="@color/colorBlack"/>



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrowright"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>

    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layBank"
    android:visibility="gone"
    android:layout_below="@id/layOut5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut_x"
        android:padding="10dp"

        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/varelaround"
            android:textStyle="bold"
            android:id="@+id/txt_x1"
            android:textColor="@color/colorBlack"/>


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/txt_x1"
            android:id="@+id/txtValBank"
            android:alpha=".6"
            android:fontFamily="@font/varelaround"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/txtBank"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut_x2"
        android:padding="10dp"
        android:layout_below="@id/layOut_x"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account / Card Number"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/varelaround"
            android:textStyle="bold"
            android:id="@+id/txt_x2"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_x2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/varelaround"
            android:layout_marginTop="5dp"
            android:hint="0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:background="#00000000"
            android:inputType="number"
            android:textColor="@color/colorFullBlack"
            android:id="@+id/txtNoBank"/>



    </RelativeLayout>

</RelativeLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_below="@+id/layBank"
    android:id="@+id/separator8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layOut6"
        android:padding="10dp"
        android:layout_below="@id/separator8"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dibayarkan "
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunitobold"
            android:textStyle="bold"
            android:id="@+id/txt4"
            android:alpha=".8"
            android:textColor="@color/colorBlack"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/varelaround"
            android:layout_marginTop="5dp"
            android:hint="0"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="24dp"
            android:background="#00000000"
            android:textColor="@color/colorFullBlack"
android:layout_toLeftOf="@+id/btnPas"
            android:layout_alignParentLeft="true"
            android:id="@+id/txtDibayarkan"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Uang Pas"
            android:id="@+id/btnPas"
            android:background="@drawable/radius_layoutblue"
            android:fontFamily="@font/nunitobold"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layOut6"
        android:text="Silahkan tap 2x pada nominal dibayarkan untuk mengganti jumlah yng dibayarkan"
        android:textSize="8dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorFullBlack"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/varelaround"
        android:alpha=".7"/>

    <RelativeLayout
        android:id="@+id/layBawah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:background="@color/colorWhite"
        android:elevation="80dp"
        android:translationZ="75dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:alpha=".6"
            android:background="@drawable/top_shadow" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Tagihan"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/varelaround"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtee"
                android:fontFamily="@font/varelaround"
                android:text="Rp 114.000"
                android:textColor="@color/colorOrange2"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <Button
            android:id="@+id/btnSimpan2"
            android:layout_width="130dp"
            android:layout_height="40dp"

       android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radius_layoutorange"
            android:fontFamily="@font/varelaround"
            android:text="Bayar"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/loadingButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:indeterminateTint="@color/colorWhite"
            android:translationZ="99dp"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnBayar"
        android:visibility="gone"
        android:background="@color/colorOrange2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:textSize="16dp"
            android:id="@+id/btnBayar2"
            android:fontFamily="@font/varelaround"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>



</RelativeLayout>