<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:background="@drawable/border_bottom">


        <ImageView
            android:layout_marginLeft = "20dp"
            android:layout_marginRight = "25dp"
            android:layout_marginTop = "20dp"
            android:id="@+id/imagelistHome"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_transblack"></ImageView>


        <TextView
            android:id="@+id/idValList1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/txtTransOrderNumb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="SO-20-0000005"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>



        <TextView
            android:id="@+id/txtTransCust2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txtTransOrderNumb2"
            android:textSize="12dp"
            android:alpha=".7"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="KI/00093 - Ragil Bayu Respati"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:ems="15"/>




        <TextView
            android:id="@+id/txtTransAmount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/txtTransCust2"
            android:textSize="20dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@id/imagelistHome"
            android:text="3,500,000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"
            android:ems="15"/>




    </RelativeLayout>

</LinearLayout>