<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:src="@drawable/home4">

    </ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:id="@+id/layTophome"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrowleft"
            android:alpha="1"
            android:id="@+id/backHome"
           ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAIL REPORT"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="51dp"
            android:fontFamily="@font/nunitobold"
            android:layout_toRightOf="@+id/backHome"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:id="@+id/txttop2"
            android:gravity="left"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgClose"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/backHome"
            android:layout_marginLeft="15dp"
            android:ems="12"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:hint="Search Order"
            android:textColorHint="@color/colorWhite"
            android:id="@+id/searchform"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:visibility="gone"
            android:background="@drawable/edt_bg_selected"
            ></EditText>



        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
          android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_closewhite"
            android:id="@+id/imgClose"></ImageView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layTophome"
        android:background="@drawable/shadow_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="20dp"
        android:id= "@+id/layTop2">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_storeblue"
            android:id="@+id/imgStore"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Kertajaya Indah "
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/imgStore"
            android:textSize="18dp"
            android:fontFamily="@font/nunitobold"
            android:layout_marginTop="15dp"
            android:id="@+id/txtSummaryStorename"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Jl. Abdul Muis No3 Trenggalek"
            android:layout_toRightOf="@+id/imgStore"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:textSize="10dp"
            android:alpha=".7"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txtSummaryStorename"
            android:id="@+id/txtSummaryAddress"></TextView>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="CASHIER"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"

            android:layout_toRightOf="@+id/imgStore"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txtSummaryAddress"
            android:id="@+id/txt3"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/colorMyBlue"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/txt3"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txtSummaryAddress"
            android:id="@+id/txtSummaryCashiercount"></TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyBlue"
            android:text="KI"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/txt3"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txtSummaryCashiercount"
            android:id="@+id/txtSummaryCodeStore"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="26 Product"
            android:textColor="@color/colorMyBlue"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/txt3"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txtSummaryCodeStore"
            android:id="@+id/txtSummaryProductCount"></TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="CODE"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/imgStore"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txt3"
            android:id="@+id/txt4"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="PRODUCT"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/imgStore"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txt4"
            android:id="@+id/txt5"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="DATE "
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/imgStore"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txt5"
            android:paddingBottom="15dp"
            android:id="@+id/txt6"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="26 Product"
            android:textColor="@color/colorMyBlue"
            android:layout_marginLeft="42dp"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/txt6"
            android:fontFamily="@font/nunitobold"
            android:layout_below="@+id/txt5"
            android:id="@+id/txtSummaryDate"></TextView>






        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_below="@+id/txtTransfertotal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/line1"
            android:background="@color/colorGraypol"/>


