<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">


    <com.example.moobie.Function.RoundRectCornerImageView
        android:id="@+id/kampusImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"

        android:background="@drawable/radius_outline"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage" />

    <TextView
        android:id="@+id/txtNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@id/kampusImage"
        android:ems="15"
        android:fontFamily="@font/varelaround"
        android:maxLength="30"
        android:text="Nasi Goreng Amerika Dengan Saus Tomat"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        android:textStyle="bold" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNamaMenu"
        android:layout_toRightOf="@id/kampusImage"
        android:text="Makanan - Rp 25.000"
        android:textSize="11dp"
        android:id="@+id/txtkategori"
        android:alpha=".7"
        android:fontFamily="@font/varelaround"
        android:textColor="@color/colorFullBlack"
        android:layout_marginLeft="10dp"></TextView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtkategori"
    android:layout_toRightOf="@id/kampusImage"
    android:text="25.000"
    android:textSize="14dp"
android:visibility="gone"
    android:id="@+id/txtHarga"
    android:fontFamily="@font/nunitobold"
    android:textColor="@color/colorFullBlack"
    android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/txtItemNumber" />



</RelativeLayout>